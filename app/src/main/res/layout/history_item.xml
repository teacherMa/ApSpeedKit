<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/test_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/test_time"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"/>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time">

            <TextView
                android:id="@+id/test_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/ip_address"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/ip_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toEndOf="@id/test_ip"
                android:layout_toRightOf="@id/test_ip"
                android:gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/test_port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/test_ip"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="@string/port"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/port_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/test_ip"
                android:layout_margin="8dp"
                android:layout_toEndOf="@id/test_port"
                android:layout_toRightOf="@id/test_port"
                android:gravity="center"
                android:textSize="16sp"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/tcp_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/service">

            <TextView
                android:id="@+id/tcp_upward_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="@string/average_tcp_upward_speed"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tcp_upward_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toEndOf="@id/tcp_upward_speed"
                android:layout_toRightOf="@id/tcp_upward_speed"
                android:gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tcp_down_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tcp_upward_speed"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="@string/average_tcp_down_speed"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tcp_down_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tcp_upward_speed"
                android:layout_margin="8dp"
                android:layout_toEndOf="@id/tcp_down_speed"
                android:layout_toRightOf="@id/tcp_down_speed"
                android:gravity="center"
                android:textSize="16sp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/udp_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tcp_speed">

            <TextView
                android:id="@+id/udp_upward_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="@string/average_udp_upward_speed"
                android:textSize="16sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/udp_upward_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toEndOf="@id/udp_upward_speed"
                android:layout_toRightOf="@id/udp_upward_speed"
                android:gravity="center"
                android:textSize="16sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/udp_down_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/udp_upward_speed"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="@string/average_udp_down_speed"
                android:textSize="16sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/udp_down_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/udp_upward_speed"
                android:layout_margin="8dp"
                android:layout_toEndOf="@id/udp_down_speed"
                android:layout_toRightOf="@id/udp_down_speed"
                android:gravity="center"
                android:textSize="16sp"
                android:visibility="gone"/>


        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>



